{
  "name": "@gfed-medusa/sf-lib-ui",
  "version": "1.1.2",
  "private": false,
  "type": "module",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/goodfrontend/gfed-medusa-storefront.git",
    "directory": "packages/sf-lib-ui"
  },
  "files": [
    "dist",
    "README"
  ],
  "exports": {
    "./components/*": {
      "types": "./dist/components/*/index.d.ts",
      "default": "./dist/components/*/index.js"
    },
    "./icons/*": {
      "types": "./dist/icons/*.d.ts",
      "default": "./dist/icons/*.js"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "default": "./dist/lib/*.js"
    },
    "./types/*": {
      "types": "./dist/types/*.d.ts",
      "default": "./dist/types/*.js"
    },
    "./styles.css": "./dist/styles/styles.css"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "format:fix": "prettier --write .",
    "lint": "eslint . --max-warnings 10",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "tailwind-merge": "^3.3.1",
    "@medusajs/icons": "^2.10.3",
    "@medusajs/ui": "^4.0.29"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@packages/eslint-config": "workspace:*",
    "@packages/jest-config": "workspace:*",
    "@packages/prettier-config": "workspace:*",
    "@packages/typescript-config": "workspace:*",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsdown": "^0.17.3",
    "typescript": "^5"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.3.7",
    "@medusajs/ui": "^4.0.29"
  },
  "peerDependenciesMeta": {
    "tw-animate-css": {
      "optional": false
    }
  }
}
