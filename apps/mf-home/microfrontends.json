{
  "$schema": "https://turborepo.com/microfrontends/schema.json",
  "options": {
    "localProxyPort": 3024
  },
  "applications": {
    "@gfed-medusa/mf-home": {
      "packageName": "@gfed-medusa/mf-home",
      "development": {
        "local": {
          "port": 3000
        }
      }
    },
    "@gfed-medusa/mf-products": {
      "packageName": "@gfed-medusa/mf-products",
      "development": {
        "local": {
          "port": 3001
        }
      },
      "routing": [
        {
          "group": "products-assets",
          "paths": ["/products-assets/:path*"]
        },
        {
          "group": "products-pages",
          "paths": [
            "/:locale/categories/:path*",
            "/:locale/collections/:path*",
            "/:locale/products/:path*",
            "/:locale/store/:path*"
          ]
        }
      ]
    },
    "@gfed-medusa/mf-account": {
      "packageName": "@gfed-medusa/mf-account",
      "development": {
        "local": {
          "port": 3002
        }
      },
      "routing": [
        {
          "group": "account-assets",
          "paths": ["/account-assets/:path*"]
        },
        {
          "group": "account-pages",
          "paths": ["/:locale/account/:path*"]
        }
      ]
    },
    "@gfed-medusa/mf-checkout": {
      "packageName": "@gfed-medusa/mf-checkout",
      "development": {
        "local": {
          "port": 3003
        }
      },
      "routing": [
        {
          "group": "checkout-assets",
          "paths": ["/checkout-assets/:path*"]
        },
        {
          "group": "checkout-pages",
          "paths": [
            "/:locale/checkout/:path*",
            "/:locale/cart/:path*",
            "/:locale/order/:path*"
          ]
        }
      ]
    }
  }
}
